<p id="notice"><%= notice %></p>


  <h1>  <%= @user.username %> </h1>

<p>
  <% unless @user.ratings.empty? %>
      has made <%= @user.ratings.count %> ratings, with an average of
      <%= @user.average_rating %>.
  <% else %>
      no ratings yet.
  <% end %>
</p>


<% if @user.favorite_style %>
  <p>
    favorite style: <%= @user.favorite_style[:name] %>, with an average of
    <%= @user.favorite_style[:score] %>
  </p>
<% end %>


<% if @user.favorite_brewery %>
  <p>
    favorite brewery: <%= link_to @user.favorite_brewery.name, @user.favorite_brewery %>
  </p>
<% end %>


<h2>ratings</h2>

<ul>
  <% @user.ratings.each do |rating| %>
      <li>
        <%= rating %>
        <% if @user == current_user %>
          <%= link_to 'delete', rating, method: :delete, data: { confirm: 'Are you sure?' } %>
        <% end %>
      </li>
  <% end %>
</ul>

<h2>beer clubs</h2>
<ul>
  <% @user.beer_clubs.each do |club| %>
  <li>
    <%= club.name %>
  </li>
  <% end %>
</ul>

   <% if @user == current_user %>
      <%= link_to 'Destroy', @user, method: :delete, data: { confirm: 'Are you sure?' } %>
      <%= link_to 'Edit', edit_user_path(@user) %> |
    <% end %>
<%= link_to 'Back', users_path %>
