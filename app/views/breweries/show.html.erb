<p id="notice"><%= notice %></p>

<p>
  <h2><%= @brewery.name %></h2>
</p>

<p>
  <i>Established at <%= @brewery.year %></i>
</p>

<p>
  <%= @brewery.beers.count %> beers:
</p>

<ol>
  <% @brewery.beers.each do |beer| %>
      <li>
        <%= link_to beer.name,  beer %>
      </li>
  <% end %>
</ol>

<% if @brewery.ratings.empty? %>
<% else %>
    <p>
      Has <%= pluralize(@brewery.ratings.count, "rating") %>,
      average: <%= @brewery.average_rating %>
    </p>
<% end %>

<% if current_user %>
    <%= link_to 'Edit', edit_brewery_path(@brewery) %> |
<% end %>
<% if admin? %>
    <%= link_to 'Destroy', brewery_path , method: :delete, data: { confirm: 'Are you sure?' }%> |
<% end %>
<%= link_to 'Back', breweries_path %>
